<%- include('partials/header.ejs') %>

    <body>
        <%- include('partials/navbar.ejs') %>
            <div class="container">
                <hr>
                <h1>perguntas</h1>
                <hr>
                <a href="/perguntar" class="btn btn-primary">Perguntar</a>
                <hr>
                <% perguntas.forEach(perguntas=> {%>
                    <br>
                    <div class="card">
                        <div class="card-body">
                            <h3>
                                <%= perguntas.titulo %>
                            </h3>
                        </div>
                        <div class="card-footer">
                            <a href="/pergunta/<%= perguntas.id %>" class="btn btn-primary">Responder</a>
                            <form method="POST", action="/deletar">
                                <br>
                                <input type="hidden" name="perguntaId" value="<%= perguntas.id %>">
                                <button class="btn btn-danger">Deletar</button>
                            </form>
                        </div>
                    </div>
                    <%}) %>
            </div>
    </body>
    <%- include('partials/footer.ejs') %>